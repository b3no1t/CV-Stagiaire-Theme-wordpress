<div class="glide">
  <div class="glide__track" data-glide-el="track">

    <ul class="glide__slides">
      {% set featured = Image(post.meta('screenshot')) %}
      {% for image in featured %}
        <li class="glide__slide">
          <picture>
            <source srcset="{{ image|towebp }}" width="{{ image.width }}" type="image/webp" />
            <source srcset="{{ image|tojpg }}" width="{{ image.width }}" type="image/jpeg" />
            <img src="{{ image|tojpg }}" width="{{ image.width }}" alt="{{ post.title }}" />
          </picture>
        </li>
      {% endfor %}
    </ul>
  </div>

  <div class="glide__arrows" data-glide-el="controls">
    <button class="-rotate-180 glide__arrow glide__arrow--left" data-glide-dir="<">
