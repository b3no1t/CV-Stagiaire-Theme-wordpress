<div class="glide">
  <div class="glide__track" data-glide-el="track">

    <ul class="glide__slides">
      {% for image in post.meta('screenshot') %}
        <li class="glide__slide">
          <img src="{{ image }}" />
        </li>
      {% endfor %}
    </ul>

  </div>

  <div class="glide__arrows" data-glide-el="controls">
    <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
      &#9664;
      </button>
    <button class=" glide__arrow glide__arrow--right" data-glide-dir=">
      ">&#9654;
    </button>
  </div>

</div>

<div class="btn-group">
  <a href="https://taskify-demo.vercel.app" class="btn btn-primary">
    Voir la d√©mo
  </a>
  <a href="https://github.com/tonpseudo/taskify" class="btn btn-primary">
