{#
  Héritage du template de base
  Comme construire sur les fondations existantes
#}
{% extends "base.twig" %}

{% block content %}
  {# Section Hero/Présentation #}
  <section class="bg-no-repeat  bg-cover hero-section h-[100dvh] flex flex-row justify-center place-items-center mb-16" style="background-image: url({{ theme_options.profile_photo }}); ">
    <div class="absolute w-full h-full backdrop bg-black/25 "></div>
    <div class="z-10 text-center hero-content">
    <h1 class="text-white font-feature-small-caps hero-subtitle ">
      {{ site.description }}
    </h1>
      <h2 class="text-primary-600 hero-title">
        {{ site.name }}
      </h2>

      {# Bouton d'action principal #}
      <div class="mt-2 hero-actions">
        <a href="#contact" class="btn btn-primary">
          Me contacter
        </a>
        <a href="/cv.pdf" class="btn btn-secondary" target="_blank">
          Télécharger mon CV
        </a>
      </div>

      {# btn scroll down #}
      <a href="#content" class="absolute w-6 h-8 bg-blue-700 rounded-full bottom-3 " title="click to scroll">
        <svg width="24" height="14" viewBox="0 0 24 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.2279 12.7721C11.4412 12.9853 11.7198 13.0914 11.9995 13.0914C12.2792 13.0914 12.5579 12.9853 12.7711 12.7721L23.6802 1.86298C24.1066 1.43752 24.1066 0.746282 23.6802 0.320827C23.2537 -0.104627 22.5635 -0.105619 22.138 0.320827L11.9995 10.4583L1.86198 0.319835C1.43653 -0.106612 0.745289 -0.106612 0.319835 0.319835C-0.106612 0.746281 -0.106612 1.43653 0.319835 1.86198L11.2279 12.7721Z" fill="#FEFEFE" />
        </svg>
      </a>

    </div>
  </section>

  <section>
    <div class="container mx-auto">
      <div class=" columns-1 md:columns-2 cv o-12">

        <article class="about" id="content">
          {# Section À propos #}
          {% include 'sections/about.twig' %}
        </article>


        <article class="skills">
          {# Section Skills #}
          {% include 'sections/skills.twig' %}
        </article>

        <article class="projects">
          {# Section Projects #}
          {% include 'sections/projects.twig' %}
        </article>

        <article class="education o-6">
          <h2 class="text-primary-600">
            EXPÉRIENCE PROFESSIONNELLE
          </h2>
          {% for item in theme_options.experiences %}
            <section class="item-{{loop.index}}">
              <div class="text-sm opacity-50 date">
                {{ item.start_date }}
                /
                {{ item.end_date }}
              </div>
              <h3 class="company text-stone-600">
                {{ item.company_name }}
              </h3>
              <div class="company-role text-primary-600">
                {{ item.job_title }}
              </div>
            </section>
          {% endfor %}
        </article>

        {# <article class="experience"> #}
        {# Section Experiences #}
          {# {% include 'sections/experience.twig' %} #}
        {# </article> #}
      </div>
    </div>
  </section>


  {% endblock %}
