{#
   Section Compétences
   Affichage des compétences techniques avec barres de progression
   ! stand-by code used in about.twig
#}
<section class="skills-section" id="skills">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Mes Compétences</h2>
            <div class="section-divider"></div>
        </div>

        {# {% if theme_options.skills_categories %} #}
            <div class="skills-content">
                <div class="row">
                    {% for category in theme_options.skills_categories %}
                        <div class="col-lg-6">
                            <div class="skills-category">
                                <h3 class="category-title">{{ category.title }}</h3>

                                {% if category.skills %}
                                    <div class="skills-list">
                                        {% for skill in category.skills %}
                                            <div class="skill-item"
                                                 data-skill-level="{{ skill.level }}">

                                                <div class="skill-header">
                                                    <span class="skill-name">
                                                        {% if skill.icon %}
                                                            <i class="{{ skill.icon }}"></i>
                                                        {% endif %}
                                                        {{ skill.name }}
                                                    </span>
                                                    <span class="skill-percentage">{{ skill.level }}%</span>
                                                </div>

                                                {# Barre de progression animée #}
                                                <div class="skill-progress">
                                                    <div class="skill-progress-bar"
                                                         style="width: {{ skill.level }}%;"
                                                         data-progress="{{ skill.level }}">
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {# {% endif %} #}

        {# Section des outils et technologies #}
        {% if theme_options.tools %}
            <div class="tools-section">
                <h3 class="tools-title">Outils & Technologies</h3>
                <div class="tools-grid">
                    {% for tool in theme_options.tools %}
                        <div class="tool-item" title="{{ tool.name }}">
                            {% if tool.logo %}
                                <img src="{{ tool.logo.url }}"
                                     alt="{{ tool.name }}"
                                     class="tool-logo">
                            {% else %}
                                <span class="tool-name">{{ tool.name }}</span>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</section>
