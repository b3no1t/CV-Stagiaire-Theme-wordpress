{#
  Section Expérience professionnelle
  Timeline des expériences avec détails
#}
<section class="experience-section" id="experience">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title text-primary-600">
        Expérience Professionnelle
      </h2>
      <div class="section-divider"></div>
    </div>

    <div>

      {% for item in theme_options.experiences %}
        <h2>
          {{ item.job_title }}
        </h2>
        <h3>
          {{ item.company_name }}
        </h3>
        <img src="{{ item.company_logo }}" alt="logo">
          <ul>
            <li>
              {{ item.start_date }}
            </li>
            <li>
              {{ item.end_date }}
            </li>
          </ul>
        {% endfor %}

      </div>

    </div>
  </section>
