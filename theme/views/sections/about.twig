{#
  Section À propos
  Présentation personnelle du développeur
#}
<section class="about-section" id="about">
  <div class="container o-8">

    <h2 class="section-title">
      À propos de moi
    </h2>

    <div class="o-6">

      {% if theme_options.about_text %}
        <div class="prose-xl about-text ">
          {{ theme_options.about_text | raw }}
        </div>
      {% endif %}

      <div class="flex flex-col items-baseline gap-16 lg:flex-row">
        {# Informations personnelles #}
        <div class="pt-8 personal-info o-6">
          <h3 class="info-title">
            Mes informations
          </h3>

          <div class="text-lg info-list o-1">
            {% if theme_options.age %}
              <div class="info-item">
                <span class="info-label">
                  Âge:
                </span>
                <span class="info-value">
                  {{ theme_options.age }}
                  ans
                </span>
              </div>
            {% endif %}

            {% if theme_options.location %}
              <div class="info-item">
                <span class="info-label">
                  Localisation:
                </span>
                <span class="info-value">
                  {{ theme_options.location }}
                </span>
              </div>
            {% endif %}

            {% if theme_options.email %}
              <div class="info-item">
                <span class="info-label">
                  Email:
                </span>
                <span class="info-value">
                  <a href="mailto:{{ theme_options.email }}">
                    {{ theme_options.email }}
                  </a>
                </span>
              </div>
            {% endif %}

            {% if theme_options.phone %}
              <div class="info-item">
                <span class="info-label">
                  Téléphone:
                </span>
                <span class="info-value">
                  <a href="tel:{{ theme_options.phone }}">
                    {{ theme_options.phone }}
                  </a>
                </span>
              </div>
            {% endif %}

            {% if theme_options.social_networks %}
              <div class="pt-2 mb-8 social-links o-6">
                <div class="social-list">
                  {% for social in theme_options.social_networks %}
                    <a href="{{ social.url }}" class="flex gap-2 flex-row social-link social-{{ social.platform | lower }}" target="_blank" rel="noopener noreferrer" title="{{ social.platform }}">
                      <img src="{{ social.icon }}" class="w-8 aspect-square " alt="{{ social.platform }}" />
                      <span>
                        {{ social.platform }}
                      </span>
                    </a>
                  {% endfor %}
                </div>
              </div>
            {% endif %}
      <a href="/cv.pdf" class="btn btn-primary" target="_blank">
        Télécharger mon CV
      </a>
          </div>
        </div>

        {# Liste des points forts #}
        {% if theme_options.skills_categories %}
          <div class=" strengths__list">
            <h3 class="pt-8 my-4 strengths__title">
              Mes atouts
            </h3>
            <ul class=" strengths__items o-4">
              {# Parcourir chaque catégorie de compétences #}
              {% for strength in theme_options.skills_categories %}
                <li>
                  <h4 class="mb-2 text-xl">
                    {{ strength.title }}
                  </h4>
                  <ul class="flex flex-wrap gap-2">
                    {% for child in strength.competences %}
                      <li class="px-2 py-1 text-[9px] rounded-lg  border-stone-400 border-1 strength__item inline-flex gap-1 items-center">
                        {% if child.icon %}
                          <i class="{{ child.icon }}"></i>
                        {% endif %}
                        <span class="font-mono">
                          {{ child.name }}
                        </span>
                      </li>
                    </li>
                  {% endfor %}
                </ul>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
