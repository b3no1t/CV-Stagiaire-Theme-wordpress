<section class="projects-section" id="projects">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title text-primary-600">Mes Projets</h2>
        </div>

        {% if theme_options.projects %}
            <div class="projects-grid">
                {% for project in theme_options.projects %}
                    <div class="project-card">

                        {# Image du projet #}
                        {% if project.screenshot %}
                            <div class="project-image">
                                <img src="{{ project.screenshot.sizes.large }}"
                                     alt="{{ project.title }}"
                                     class="project-img">

                                {# Overlay avec actions #}
                                <div class="project-overlay">
                                    <div class="project-actions">
                                        {% if project.demo_url %}
                                            <a href="{{ project.demo_url }}"
                                               class="btn btn-primary"
                                               target="_blank"
                                               rel="noopener noreferrer">
                                                <i class="fas fa-eye"></i> Voir le projet
                                            </a>
                                        {% endif %}

                                        {% if project.github_url %}
                                            <a href="{{ project.github_url }}"
                                               class="btn btn-secondary"
                                               target="_blank"
                                               rel="noopener noreferrer">
                                                <i class="fab fa-github"></i> Code source
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {# Contenu du projet #}
                        <div class="project-content">
                            <h3 class="project-title text-primary-600">{{ project.title }}</h3>

                            {% if project.description %}
                                <p class="project-description">{{ project.description }}</p>
                            {% endif %}

                            {# Technologies utilisées #}
                            {% if project.technologies %}
                                <div class="project-tech">
                                    {% for tech in project.technologies %}
                                        <span class="tech-badge">{{ tech.name }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            {# Métadonnées du projet #}
                            <div class="project-meta">
                                {% if project.duration %}
                                    <span class="project-duration">
                                        <i class="fas fa-clock"></i> {{ project.duration }}
                                    </span>
                                {% endif %}

                                {% if project.team_size %}
                                    <span class="project-team">
                                        <i class="fas fa-users"></i>
                                        {% if project.team_size == 1 %}
                                            Projet solo
                                        {% else %}
                                            Équipe de {{ project.team_size }}
                                        {% endif %}
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

       </div>
</section>
